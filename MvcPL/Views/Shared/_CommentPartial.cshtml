@model MvcPL.Models.CommentViewModel

<div class="comment_wrap">
    @*<div class="comment_image">
        <img src="~/Content/anonymous.png" class="comment_img">
    </div>*@
    <div class="comment_content">

        <div class="comment_author">
            By @Model.UserName at @Model.DateAdded
        </div>
        <div class="comment_text">
            @Model.Content
        </div>
        <div>Rating: @Model.Rating 
        @Html.ActionLink("Like", "Like", "Comments", new { commentId = Model.Id }, null)</div>
    </div>
</div>
<hr />
