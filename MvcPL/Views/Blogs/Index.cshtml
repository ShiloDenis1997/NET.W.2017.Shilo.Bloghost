@using MvcPL.HtmlHelpers
@model MvcPL.Models.Lists.BlogsListViewModel

@{
    ViewBag.Title = "Blogs";
}

<h2>Blogs</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<ul class="list-unstyled">
    @foreach (var blog in Model.Blogs)
    {
        <li>
            @{ Html.RenderPartial("_BlogPartial", blog); }
        </li>
    }
</ul>
<div>
    @Html.PagingLinks(Model.PagingInfo, p => Url.Action("Index", new { page = p }))
</div>